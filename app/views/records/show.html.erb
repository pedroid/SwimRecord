<div class="group">
  <%= link_to("records array", records_path, class: "btn btn-primary pull-right") %>
  <%= link_to("New record", new_record_path, class: "btn btn-primary pull-right") %>
</div>

<table class="table table-hover">
<thead>
  <tr>
    <td>item</td>
    <td>distance</td>
    <td>property</td>
    <td>time</td>
    <td>date(mm/dd/yy)</td>
  </tr>
</thead>
  <% @records.each do |record| %>
<tr>
  <td><%= record.swim_item.name  %></td>
  <td><%= record.swim_distance.distance %></td>
  <td><%= record.contest.name  %></td>
  <td><%= record.minutes.to_s<< '"'<<record.seconds.to_s %></td>
  <td><%= record.month.to_s<<'/'<<record.date.to_s<<'/'<<record.year.to_s %></td>
  <td>
  <%= link_to("Edit", edit_record_path(record),
                       class: "btn btn-default btn-xs")%>
  <%= link_to("Delete", record_path(record),
     class: "btn btn-default btn-xs ", method: :delete,
     data: { confirm: "Are you sure?" } )%>
  </td>
</tr>

  <% end %>


</table>
