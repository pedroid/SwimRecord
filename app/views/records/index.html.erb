<div class="group">
<%= link_to("overall record", overall_records_path, class: "btn btn-primary pull-right") %>
  <%= link_to("New record", new_record_path, class: "btn btn-primary pull-right") %>
</div>
<table class="table table-hover">
<thead>
<tr>
<td>item/distance</td>
<% @swim_distances.each do |swim_distance|%>
<td><%=   swim_distance.distance %> </td>
<%end %>
</thead>
<% @swim_items.each do |swim_item| %>
<tr>
  <td><%= swim_item.name %></td>
<% @swim_distances.each do |swim_distance| %>
<td>
  <% filter_record = Record.where(swim_distance:swim_distance.id).where(swim_item:swim_item.id).last%>
  <% if filter_record %>
  <%= link_to filter_record.minutes.to_s << '"'<< filter_record.seconds.to_s, record_path(filter_record.id)%>
  <% else %>
  N/A
  <%end %>
</td>


<% end %>
</tr>
<% end %>
</table>
