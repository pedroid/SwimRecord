<div class="group">
  <%= link_to("New record", new_itri_record_path, class: "btn btn-primary pull-right") %>
</div>
<table class="table table-hover">
<thead>
  <tr>
    <td>Item</td>
    <td>Distance(meters)</td>
    <td>record(mm"ss)</td>
    <td>owner</td>
    <td>year</td>
    <td>contest</td>
    <td>sex</td>
  </tr>
</thead>
  <% @itri_records.each do |record| %>
<tr>
  <td><%= record.swim_item.name %></td>
  <td><% if record.distance_id <= @swim_distances.size %>
      <%= record.swim_distance.distance%>

      <% end %>
    </td>

  <td><%= record.minutes.to_s<<'"'<<record.seconds.to_s %></td>
  <td><%= record.athelete.name  %></td>
  <td><%= record.year %></td>
  <td><%= record.contest.name%></td>
  <td><% if record.athelete.sex %>
         male
        <% else %>
         female
        <% end %>
  </td>
</tr>

  <% end %>
</table>
