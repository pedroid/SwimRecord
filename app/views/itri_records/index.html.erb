<div class="group">
  <%= link_to("New record", new_itri_record_path, class: "btn btn-primary pull-right") %>
</div>
<table class="table table-hover">
<thead>
  <tr>
    <td>id</td>
    <td>項目</td>
    <td>距離</td>
    <td>性質</td>
    <td>分</td>
    <td>秒</td>
    <td>保持者</td>
  </tr>
</thead>
  <% @itri_records.each do |record| %>
<tr>
  <td><%= record.id  %></td>
  <td><%= @swim_items.find(record.program_id).name  %></td>
  <td><% if record.distance_id < @swim_distances.size %>
      <%= #@swim_distances.find(record.distance_id).distance
      record.distance_id %>
      <% end %>
    </td>

  <td><%= record.property_id  %></td>
  <td><%= record.minutes  %></td>
  <td><%= record.seconds  %></td>
  <td><%= record.owner_id  %></td>
</tr>

  <% end %>
</table>
