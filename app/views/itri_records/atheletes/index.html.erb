<h1>atheletes</h1>
<div class="group">
  <%= link_to("New Athelete", new_itri_records_athelete_path, class: "btn btn-primary pull-right") %>
  <%= link_to("athelete", itri_records_atheletes_path, class: "btn btn-primary pull-right") %>
  <%= link_to("overall itri record", overall_itri_records_path, class: "btn btn-primary pull-right") %>
  <%= link_to("New itri record", new_itri_record_path, class: "btn btn-primary pull-right") %>
  <%= link_to("import batch itri record", import_itri_records_path, class: "btn btn-primary pull-right") %>
</div>
<h2>male</h2>
<table class="table table-hover">
<thead>
  <tr>
    <td>name</td>
    <td>unit</td>
  </tr>
</thead>
  <% @atheletes_male.each do |athelete| %>
<tr>
  <td><%= athelete.name %></td>
<td><%= athelete.unit.name %></td>
  <td>
  <%= link_to("Edit", edit_itri_records_athelete_path(athelete),
                       class: "btn btn-default btn-xs")%>
  <%= link_to("Delete", itri_records_athelete_path(athelete),
     class: "btn btn-default btn-xs ", method: :delete,
     data: { confirm: "Are you sure?" } )%>
  </td>
</tr>

  <% end %>


</table>
